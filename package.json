{
  "name": "nimrod",
  "version": "1.0.0",
  "description": "isometric game in typescript",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "build": "npx tsc && cp -r index.html img/ maps/ config/ styles.css dist",
    "clean": "rm -rf dist/*",
    "serve": "python3 -m http.server --directory dist 8080",
    "bundle": "esbuild dist/script.js --bundle --minify --outfile=script.js && rm -rf dist/classes && rm -f dist/script.js && mv script.js dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpakx/nimrod.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xpakx/nimrod/issues"
  },
  "homepage": "https://github.com/xpakx/nimrod#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "esbuild": "0.25.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.3"
  }
}
